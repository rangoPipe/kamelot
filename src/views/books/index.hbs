{{#if books }}
    <h1>Books</h1>
    <hr>     
    <div class="row">        
        {{#each books}}
            <div class="col-md-4">
                <div class="card card-body">
                    <h3>{{title}}</h3>
                    <p>Author: {{ author}}</p>
                    <small>ISBN: {{ isbn}} </small>
                </div>
            </div>
        {{/each}}
    </div>
{{/if}}